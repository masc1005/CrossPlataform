{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": [
      "ES6"
    ],
    "allowJs": true,
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": true,
    "baseUrl": "./",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types",
    ],
    "strict": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src"
  ]
}